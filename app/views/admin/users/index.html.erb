
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Users</h3>
          </div>
          <table class="table table-hover" id="dev-table">
            <thead>
              <tr>
                <th>#</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>User type</th>
              </tr>
            </thead>
             <%= paginate @user %><br/>

  
            <tbody>
            <% @user.each do |u| %>
              <tr>
                <td><%= u.id %> </td>
                <td><%= u.firstname %> </td>
                <td><%= u.lastname %> </td>
              
                 <% if u.admin == "true" %>
                <td><%= link_to "Admin", admin_user_path(u) %></td>
                 <% else %>
                 <td><%= link_to "General", admin_user_path(u) %></td>
                 <% end %>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

